@article{mechanics1,
author = {Jingran Liu  and Margot Teunisse  and George Korovin  and Ivo R. Vermaire  and Lishuai Jin  and Hadrien Bense  and Martin van Hecke },
title = {Controlled pathways and sequential information processing in serially coupled mechanical hysterons},
journal = {Proceedings of the National Academy of Sciences},
volume = {121},
number = {22},
pages = {e2308414121},
year = {2024},
doi = {10.1073/pnas.2308414121},
URL = {https://www.pnas.org/doi/abs/10.1073/pnas.2308414121},
eprint = {https://www.pnas.org/doi/pdf/10.1073/pnas.2308414121},
abstract = {Driven frustrated materials evolve via sequences of transitions between metastable states, associated with the flipping of one or more material bits called hysterons. Interactions between hysterons are key for obtaining and understanding complex pathways, yet their control has remained elusive. Here, we uncover a general geometric mechanism that yields controllable hysteron interactions. We characterize the resulting pathways and leverage our insights to fabricate metamaterials with targeted pathways that materialize counting, pattern generation, and pattern recognition. Our results open a route toward material-based sequential computing. The complex sequential response of frustrated materials results from the interactions between material bits called hysterons. Hence, a central challenge is to understand and control these interactions, so that materials with targeted pathways and functionalities can be realized. Here, we show that hysterons in serial configurations experience geometrically controllable antiferromagnetic-like interactions. We create hysteron-based metamaterials that leverage these interactions to realize targeted pathways, including those that break the return point memory property, characteristic of independent or weakly interacting hysterons. We uncover that the complex response to sequential driving of such strongly interacting hysteron-based materials can be described by finite state machines. We realize information processing operations such as string parsing in materia, and outline a general framework to uncover and characterize the FSMs for a given physical system. Our work provides a general strategy to understand and control hysteron interactions, and opens a broad avenue toward material-based information processing.}}

@article{acoustic1,
author = {Dubček, Tena and Moreno-Garcia, Daniel and Haag, Thomas and Omidvar, Parisa and Thomsen, Henrik R. and Becker, Theodor S. and Gebraad, Lars and Bärlocher, Christoph and Andersson, Fredrik and Huber, Sebastian D. and van Manen, Dirk-Jan and Villanueva, Luis Guillermo and Robertsson, Johan O.A. and Serra-Garcia, Marc},
title = {In-Sensor Passive Speech Classification with Phononic Metamaterials},
journal = {Advanced Functional Materials},
volume = {34},
number = {17},
pages = {2311877},
keywords = {mechanical computing, metamaterials, physical computing, smart materials, zero-power computing},
doi = {https://doi.org/10.1002/adfm.202311877},
url = {https://advanced.onlinelibrary.wiley.com/doi/abs/10.1002/adfm.202311877},
eprint = {https://advanced.onlinelibrary.wiley.com/doi/pdf/10.1002/adfm.202311877},
abstract = {Abstract Mitigating the energy requirements of artificial intelligence requires novel physical substrates for computation. Phononic metamaterials have vanishingly low power dissipation and hence are a prime candidate for green, always-on computers. However, their use in machine learning applications has not been explored due to the complexity of their design process. Current phononic metamaterials are restricted to simple geometries (e.g., periodic and tapered) and hence do not possess sufficient expressivity to encode machine learning tasks. A non-periodic phononic metamaterial, directly from data samples, that can distinguish between pairs of spoken words in the presence of a simple readout nonlinearity is designed and fabricated, hence demonstrating that phononic metamaterials are a viable avenue towards zero-power smart devices.},
year = {2024}
}

