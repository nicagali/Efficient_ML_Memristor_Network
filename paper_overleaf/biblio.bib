@article{ai_tech1,
title = {Multilayer Neural Network Based Speech Emotion Recognition for Smart Assistance},
journal = {Computers, Materials and Continua},
volume = {74},
number = {1},
pages = {1523-1540},
year = {2022},
issn = {1546-2218},
doi = {https://doi.org/10.32604/cmc.2023.028631},
